extends ../shared/template
block content
  #index(style= 'background-image: url(/img/home-bg.jpg)')
    if(!user)
      .row
        .col-xs-6
          h2.text-center Register
        .col-xs-6
          h2.text-center Login
      .row
        .col-xs-1
        .col-xs-4
          form(role='form', method='post', action='/register')
            .form-group
              label(for='email') Email
              input.form-control#email(type='email', name='email', autofocus=true)
            .form-group
              label(for='password') Password
              input.form-control#password(type='password', name='password')
            button.btn.btn-primary(type='submit') Submit
        .col-xs-1
        .col-xs-1
        .col-xs-4
          form(role='form', method='post', action='/login')
            .form-group
              label(for='email') Email
              input.form-control#email(type='email', name='email', autofocus=true)
            .form-group
              label(for='password') Password
              input.form-control#password(type='password', name='password')
            button.btn.btn-success(type='submit') Submit

    else

      .row.band
        .col-xs-2
        .col-xs-8.title
          h1 Unmarked White Van
          p Come find your match!
          span.text-center Is it really that easy? There is only one way to find out...
        .col-xs-2

 block scripts
 script(src='/js/user/home.js')

